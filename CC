import java.io.*;

class Ceasar{
	static final String A="abcdefghijklmnopqrstuvwxyz";
	static String enc(String p,int k){
		String c="";
		for(char ch:p.toCharArray())
			c += A.charAt((A.indexOf(ch)+k)%26);
		return c;
	}
	static String dec(String c,int k){
		String p="";
		for(char ch:c.toCharArray()){
			int n=(A.indexOf(ch)-k)%26;
			if(n<0) n+=26;
			p += A.charAt(n);
		}
		return p;
	}

	public static void main(String[] a)throws Exception{
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		System.out.println("Plain Text:");
		String p = br.readLine();
		System.out.println("Enter Key from 0 to 25:");
		int k = Integer.parseInt(br.readLine());
		String c = enc(p,k);
		System.out.println("Cipher Text:"+c);
		System.out.println("Plain Text:"+p);
}
}
